<h1>Cities</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Code</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <p> O idioma padrão é :<%= i18n.locale %> - <%=t('hello')%></p>
        <td><%= city.description %></td>
        <td><%= city.code %>
        <td><%= city.state.description %> </td>
      
        <td><%= image_tag city.image, size: "100x50" %></td>

        <%# <td>img scr="<%=city.iamge %">"widht="25px" heigth="25px"></td> %>

        
        <td><%= link_to t('links.show'), city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

